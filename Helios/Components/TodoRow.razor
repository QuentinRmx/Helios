@using Helios.Data.Models


<link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
<link rel="stylesheet" href="css/helios.css" />
<div class="form-check">
    
    <input type="checkbox" class="form-check-input" value="@todo.IsDone" @onchange="@CbIsDoneCallback" id="@("cbIsDone" + @todo.Id)"/>
    <label class="form-check-label" for="@("cbIsDone" + @todo.Id)">@todo.Title</label>
    <button class="btn btn-outline-danger " @onclick="@DeleteCallback"><div class="fs-6">Delete</div></button>
</div>
@code {

    [Parameter]
    public Todo todo { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> DeleteCallback { get; set; }

    [Parameter]
    public EventCallback CbIsDoneCallback { get; set; }
}
